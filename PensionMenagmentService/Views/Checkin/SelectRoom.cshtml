
@model PensionMenagmentService.Models.PensionViewModel


@{
    ViewData["Title"] = "Selected Room";
}

<h1>Check In</h1>
<div class="container">
    <div class="row">

        <div class="col">
            <h3> Selected Room</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Room Nr
                        </th>

                        <th>
                            for smokers
                        </th>
                        <th>
                            room type
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.RoomList)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Number)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Smoke)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nubmerbeds)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Chec-In Room</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Check-In Form</h6>
                    <form asp-controller="Checkin" asp-action="CheckinRoomAdd" autocomplete="off">
                        <label for="exampleFormControlSelect1">Room Nr</label>
                        <select class="form-control" name="id" id="exampleFormControlSelect1">
                            <option value=@ViewBag.RoomNr>@ViewBag.RoomNr</option>


                        </select>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Name</label>
                            <input type="text" class="form-control" name="name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Surname</label>
                            <input type="text" class="form-control" name="surname">
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                        <div class="text-danger">@ViewBag.NoFreeRooms @ViewBag.ValidationText</div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
